 <!-- form handling -->
 <form action="/api/users" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="">
            <input id="userName" type="text" name="name" value="" placeholder="Mark Stoenis">
        </div>
        <div class="form-group">
            <label for="Email" class="text-light">Email</label>
            <input id="userEmail" type="text" name="email" value="" placeholder="example@gmail.com">
        </div>
        

        <div class="form-group">
            <button type="submit" id="saveUser" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>